# Proxmox Configuration
proxmox_api_url          = "https://your-proxmox-host:8006/api2/json"
proxmox_api_token_id     = "terraform@pam!terraform"
proxmox_api_token_secret = "your-api-token-secret"
proxmox_tls_insecure     = true

# LXC Containers
lxc_containers = {
  "web-server" = {
    node         = "pve"
    hostname     = "web-01"
    template     = "local:vztmpl/debian-12-standard_12.2-1_amd64.tar.zst"
    password     = "your-secure-password"
    ip           = "192.168.1.101/24"
    gateway      = "192.168.1.1"
    memory       = 1024
    cores        = 2
    disk_size    = "10G"
    setup_script = "${path.module}/scripts/web-setup.sh"
    enable_provisioning = true
  },
  
  "database" = {
    node         = "pve"
    hostname     = "db-01"
    template     = "local:vztmpl/debian-12-standard_12.2-1_amd64.tar.zst"
    password     = "your-secure-password"
    ip           = "192.168.1.102/24"
    gateway      = "192.168.1.1"
    memory       = 2048
    cores        = 2
    disk_size    = "20G"
    setup_script = "${path.module}/scripts/db-setup.sh"
    enable_provisioning = true
  },
  
  "dev-container" = {
    node     = "pve"
    hostname = "dev-01"
    template = "local:vztmpl/debian-12-standard_12.2-1_amd64.tar.zst"
    password = "your-secure-password"
    ip       = "dhcp"
    memory   = 512
    cores    = 1
    enable_provisioning = false
  }
}

# VMs
vms = {
  "app-server" = {
    node         = "pve"
    name         = "app-01"
    template     = "debian-12-cloudinit"
    password     = "your-secure-password"
    user         = "debian"
    ipconfig     = "ip=192.168.1.201/24,gw=192.168.1.1"
    cores        = 4
    memory       = 4096
    disk_size    = "40G"
    setup_script = "${path.module}/scripts/app-setup.sh"
    enable_provisioning = true
  },
  
  "monitoring" = {
    node     = "pve"
    name     = "monitor-01"
    template = "debian-12-cloudinit"
    password = "your-secure-password"
    user     = "debian"
    ipconfig = "ip=192.168.1.202/24,gw=192.168.1.1"
    cores    = 2
    memory   = 2048
    disk_size = "30G"
    enable_provisioning = false
  }
}
