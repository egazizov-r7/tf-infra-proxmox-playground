# Proxmox Provider Configuration
proxmox_api_url          = "https://your-proxmox-host:8006/api2/json"
proxmox_api_token_id     = "terraform@pam!terraform"
proxmox_api_token_secret = "your-api-token-secret"
proxmox_tls_insecure     = true

# Debian VM Configuration
node = "pve"
name = "debian-vm"
template = "local:iso/debian-12.2.0-amd64-netinst.iso"
cores = 2
memory = 2048
storage = "local-lvm"
disk_size = "20G"
bridge = "vmbr0"
ipconfig = "ip=192.168.1.200/24,gw=192.168.1.1"
user = "debian"
password = "debian-vm-password"
ssh_keys = ""
setup_script = "./scripts/debian-setup.sh"
enable_provisioning = true